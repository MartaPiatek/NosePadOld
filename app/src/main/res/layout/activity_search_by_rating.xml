<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.martapiatek.nosepad.SearchByRatingActivity"
    android:background="@color/back"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp"
    android:weightSum="1"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        />


    <TextView
        android:id="@+id/txtRatingLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:text="Ocena"
        android:textColor="@color/colorFont2"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        />

    <RadioGroup
        android:id="@+id/radio_group"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:checkedButton="@+id/radioButton0_2">

        <RadioButton
            android:id="@+id/radioButton0_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="@color/colorFont2"
            android:text="0-2"
            android:textColor="@color/colorFont2"/>

        <RadioButton
            android:id="@+id/radioButton3_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3-5"
            android:textColor="@color/colorFont2"/>

        <RadioButton
            android:id="@+id/radioButton6_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6-8"
            android:textColor="@color/colorFont2"/>

        <RadioButton
            android:id="@+id/radioButton9_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9-10"
            android:textColor="@color/colorFont2"/>

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        />

    <Button
        android:id="@+id/btnSearchRating"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/colorBtn"
        android:text="Wyszukaj"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        />

    <ListView
        android:id="@+id/reviewsBrand_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.5"
        tools:listitem="@layout/reviews_row"
        />
</LinearLayout>


