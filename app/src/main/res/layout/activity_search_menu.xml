<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.martapiatek.nosepad.SearchMenuActivity"
    android:background="@color/back"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.29"/>

            <Button
                android:id="@+id/btnSearchByName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBtn"
                android:fontFamily="sans-serif"
                android:text="Wyszukaj po nazwie"
                android:textColor="@color/colorFont"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.24"/>

            <Button
                android:id="@+id/btnSearchByNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBtn"
                android:fontFamily="sans-serif"
                android:text="Wyszukaj po nutach"
                android:textColor="@color/colorFont"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.27"/>

            <Button
                android:id="@+id/btnSearchByRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBtn"
                android:fontFamily="sans-serif"
                android:text="Wyszukaj po ocenie"
                android:textColor="@color/colorFont"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.29"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"/>

    </LinearLayout>

</LinearLayout>


